# ================================================================
# AvestoAI Environment Configuration
# Copy this file to .env and fill in your actual values
# ================================================================

# Environment Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=avestoai-466417
VERTEX_AI_LOCATION=us-central1
FIRESTORE_DATABASE=(default)
GOOGLE_APPLICATION_CREDENTIALS=./credentials/service-account-key.json

# Authentication & Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=30

# Fi Money MCP Configuration (REQUIRED)
FI_MCP_BASE_URL=https://your-fi-mcp-server.com/api
FI_MCP_API_KEY=your-fi-mcp-api-key-here
FI_MCP_TIMEOUT=30
FI_MCP_MAX_RETRIES=3

# API Configuration
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30

# Security & CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8001","http://localhost:8002","https://yourdomain.com"]
ALLOWED_HOSTS=["*"]

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# Caching & Performance
CACHE_TTL=300
REDIS_URL=redis://localhost:6379

# Database
DATABASE_URL=postgresql://user:pass@localhost/avestoai
DATABASE_POOL_SIZE=20

# Feature Flags
ENABLE_PREDICTIVE_ANALYSIS=true
ENABLE_REAL_TIME_STREAMING=true
ENABLE_ADVANCED_CHARTS=true
ENABLE_METRICS=true

# External APIs (Optional)
EXTERNAL_API_TIMEOUT=30

# Development Settings
DEV_AUTO_RELOAD=true
DEV_CORS_ALL_ORIGINS=true

# Production Settings (set these in production)
# SENTRY_DSN=https://your-sentry-dsn-here
# NEW_RELIC_LICENSE_KEY=your-new-relic-key
# DATADOG_API_KEY=your-datadog-key
